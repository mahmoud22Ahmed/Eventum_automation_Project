<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Suite" parallel="methods" thread-count="2">

    <listeners>
        <listener class-name="Listeners.ITest"/>
    </listeners>

    <test name="Login page test on google Chrome">
        <groups>
            <run>
                <include name="valid"/>
                <include name="invalid"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.LoginTC"/>
        </classes>
    </test>




</suite>